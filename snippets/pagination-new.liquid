{% comment %}
  Renders a set of links for paginated results. Must be used within paginate tags.

  Usage:
  {% paginate results by 2 %}
    {% render 'pagination', paginate: paginate, anchor: '#yourID' %}
  {% endpaginate %}

  Accepts:
  - paginate: {Object}
  - anchor: {String} (optional) This can be added so that on page reload it takes you to wherever you've placed your anchor tag.
{% endcomment %}

{% comment %} {{ 'component-pagination.css' | asset_url | stylesheet_tag }} {% endcomment %}

{%- if paginate.parts.size > 0 -%}
  <div class="pagination-wrapper mt-10" data-page="{{ paginate.current_page }}">
    <nav
      class="pagination flex justify-between gap-20 text-sm"
      role="navigation"
      aria-label="{{ 'general.pagination.label' | t }}"
    >
      <div class="pagination__previous flex-1">
        {%- if paginate.previous -%}
          <a
            href="{{ paginate.previous.url }}{{ anchor }}"
            class="pagination__item inline-flex h-10 items-center gap-1"
            aria-label="{{ 'general.pagination.previous' | t }}"
          >
            <span class="svg-wrapper inline rotate-180">
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            </span>
            Previous
          </a>
        {%- else -%}
          <span
            class="pagination__item inline-flex h-10 cursor-not-allowed items-center gap-1 opacity-50"
            aria-label="{{ 'general.pagination.previous' | t }}"
          >
            <span class="svg-wrapper inline rotate-180">
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            </span>
            Previous
          </span>
        {%- endif -%}
      </div>

      <ul class="pagination__list flex flex-nowrap items-center justify-center space-x-1" role="list">
        {%- for part in paginate.parts -%}
          <li>
            {%- if part.is_link -%}
              <a
                href="{{ part.url }}{{ anchor }}"
                class="pagination__item link inline-flex h-10 w-10 items-center justify-center rounded-lg"
                aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
              >
                {{- part.title -}}
              </a>
            {%- else -%}
              {%- if part.title == paginate.current_page -%}
                <a
                  role="link"
                  aria-disabled="true"
                  class="pagination__item--current inline-flex h-10 w-10 items-center justify-center rounded-lg border bg-black text-white"
                  aria-current="page"
                  aria-label="{{ 'general.pagination.page' | t: number: part.title }}"
                >
                  {{- part.title -}}
                </a>
              {%- else -%}
                <span class="pagination__item">{{ part.title }}</span>
              {%- endif -%}
            {%- endif -%}
          </li>
        {%- endfor -%}
      </ul>

      <div class="pagination__next flex flex-1 justify-end">
        {%- if paginate.next -%}
          <a
            href="{{ paginate.next.url }}{{ anchor }}"
            class="pagination__item inline-flex h-10 items-center gap-1"
            aria-label="{{ 'general.pagination.next' | t }}"
          >
            Next
            <span class="svg-wrapper inline">
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            </span>
          </a>
        {%- else -%}
          <span
            class="pagination__item inline-flex h-10 cursor-not-allowed items-center gap-1 opacity-50"
            aria-label="{{ 'general.pagination.next' | t }}"
          >
            Next
            <span class="svg-wrapper inline">
              {{- 'icon-arrow.svg' | inline_asset_content -}}
            </span>
          </span>
        {%- endif -%}
      </div>
    </nav>
  </div>
{%- endif -%}

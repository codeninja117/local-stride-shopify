                <span class="text-muted uppercase">Patient</span>
                <div>
                  <p class="text-xl">{{ block.settings.patient_name }}</p>
                  <p class="text-muted uppercase">{{ block.settings.patient_age }}</p>
                </div>
              </div>
            </div>
            <div class="flex w-1/2 flex-col gap-8">
              <span class="text-muted uppercase">Patient notes</span>
              <p class="">{{ block.settings.patient_notes }}</p>
            </div>

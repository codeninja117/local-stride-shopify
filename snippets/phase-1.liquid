      </div>
      <div>
        <div class="relative">
          {%- if block.settings.patient_banner_image != blank -%}
            {{
              section.settings.patient_banner_image
              | image_url: width: 3840
              | image_tag:
                width: block.settings.patient_banner_image.width,
                class: 'w-full h-auto',
                sizes: '50vw',
                widths: widths
            }}
          {%- else -%}
            <div class="bg-slate/30 aspect-square overflow-hidden rounded-xl"></div>
          {%- endif -%}

          <div class="absolute right-0 bottom-0 left-0 flex bg-white/30 p-4 backdrop-blur-2xl">
            <div class="flex w-1/2 gap-5">
              {%- if block.settings.patient_image != blank -%}
                {{
                  section.settings.patient_image
                  | image_url: width: 300
                  | image_tag: width: block.settings.patient_banner_image.width, class: 'w-30 h-auto'
                }}
              {%- else -%}
                <div class="bg-slate/30 aspect-square w-30 rounded-xl"></div>
              {%- endif -%}

<div class="flex flex-col items-center rounded-xl border border-black/10 p-2 text-center text-xs md:p-5 md:text-base">
  {% if image %}
    {%- assign image_alt = image.alt | default: shop.name -%}
    <div class="pain-card-image relative h-[52px] w-[52px] grow">
      {{
        image
        | image_url: width: 100
        | image_tag: class: 'w-full h-auto object-contain', loading: 'lazy', alt: image_alt
      }}
    </div>
  {%- else -%}
    <div class="pain-card-placeholder h-[52px] w-[52px] bg-black/10"></div>
  {% endif %}

  {%- if title != blank -%}
    <p>{{ title }}</p>
  {%- endif -%}
</div>

<section id="{{ title_handle }}" class="grid gap-8 rounded-xl bg-white p-8 text-black">
  <div class="phase__main flex flex-col gap-30">
    {{ 'icon-question.svg' | inline_asset_content }}

    <div>
      <span class="text-muted uppercase">Phase {{ index }}</span>
      <h2 class="display flex flex-col">
        {{
          block.settings.title
          | replace: '<em>', '<span class="opacity-40">'
          | replace: '</em>', '</span>'
          | replace: '|', '</span><span>'
        }}
      </h2>
    </div>

    {%- comment -%}start: image row{%- endcomment -%}
    <div class="flex gap-2">
      {%- if block.settings.phone_image != blank -%}
        {{ section.settings.phone_image | image_url: width: 640 | image_tag: class: 'w-full h-auto' }}
      {%- else -%}
        <div class="bg-slate/30 aspect-9/12 w-1/4 overflow-hidden rounded-xl"></div>
      {%- endif -%}
      {%- if block.settings.other_image != blank -%}
        {{ section.settings.other_image | image_url: width: 640 | image_tag: class: 'w-full h-auto' }}
      {%- else -%}
        <div class="bg-slate/30 aspect-16/9 w-full overflow-hidden rounded-xl"></div>
      {%- endif -%}
    </div>
    {%- comment -%}start: content grid{%- endcomment -%}
    <div class="-mt-20 flex justify-between gap-8">
      <div class="w-1/2">
        <ul class="flex flex-col gap-10">
          <li class="flex flex-col gap-4">
            <span class="text-black/40 uppercase">{{ block.settings.item_1_eyebrow_text }}</span>
            <p class="text-2xl">{{ block.settings.item_1_text }}</p>
          </li>
          <li class="flex flex-col gap-4">
            <span class="text-black/40 uppercase">{{ block.settings.item_2_eyebrow_text }}</span>
            <div class="rte flex flex-col gap-4 text-2xl">{{ block.settings.item_2_text }}</div>
          </li>
        </ul>
      </div>
      <div class="flex w-1/3 flex-col gap-20">
        <p class="text-xl">{{ block.settings.item_3_text }}</p>

        <ul class="flex flex-col gap-6">
          <li class="flex flex-col gap-2">
            <h3 class="text-2xl">{{ block.settings.callout_1_title }}</h3>
            <p class="text-black/40">{{ block.settings.callout_1_text }}</p>
          </li>
          <li class="flex flex-col gap-2">
            <h3 class="text-2xl">{{ block.settings.callout_2_title }}</h3>
            <p class="text-black/40">{{ block.settings.callout_2_text }}</p>
          </li>
          <li class="flex flex-col gap-2">
            <h3 class="text-2xl">{{ block.settings.callout_3_title }}</h3>
            <p class="text-black/40">{{ block.settings.callout_3_text }}</p>
          </li>
        </ul>

        <div>
          {% render 'button',
            tag: 'a',
            text: block.settings.button_label,
            url: block.settings.button_url,
            variant: 'primary-fade'
          %}
        </div>
      </div>
    </div>
  </div>
</section>

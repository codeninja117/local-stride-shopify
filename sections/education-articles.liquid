{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .education-articles__grid {
    display: grid;
    gap: 24px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .education-articles__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
{%- endstyle -%}

<section class="education-articles">
  <div class="page-width max-w-screen-2xl">
    <div class="education-articles__header mb-8 flex flex-col">
      {%- assign education_title = section.settings.title -%}
      {%- unless education_title contains '<strong>' or education_title contains '<em>' -%}
        {%- assign education_title = education_title | replace: 'Education', '<strong>Education</strong>' -%}
      {%- endunless -%}
      <h2 class="text-h1 section-title capitalize">
        {{
          education_title
          | replace: '<em>', '<span class="">'
          | replace: '</em>', '</span>'
          | replace: '|', '</span><br><span>'
        }}
      </h2>
    </div>

    <ul class="education-articles__grid">
      {%- if product != blank -%}
        {%- assign education_articles = product.metafields.custom.education_articles.value -%}
      {%- endif -%}

      {%- if education_articles != blank -%}
        {%- for article in education_articles limit: 3 -%}
          <li>
            {% render 'article-card', article: article %}
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Education articles",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "XXXX <strong>Education</strong>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Education articles"
    }
  ]
}
{% endschema %}

{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .education-articles__grid {
    display: grid;
    gap: 24px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .education-articles__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
{%- endstyle -%}

<section class="education-articles">
  <div class="page-width max-w-screen-2xl">
    <div class="education-articles__header mb-8 flex flex-col gap-3">
      {%- if section.settings.kicker != blank -%}
        <p class="text-sm uppercase tracking-widest text-black/60">{{ section.settings.kicker | escape }}</p>
      {%- endif -%}
      <h2 class="text-h2 font-extrabold">{{ section.settings.title | escape }}</h2>
      {%- if section.settings.subtitle != blank -%}
        <p class="max-w-3xl text-base text-black/60">{{ section.settings.subtitle | escape }}</p>
      {%- endif -%}
    </div>

    <ul class="education-articles__grid">
      {%- if section.blocks.size > 0 -%}
        {%- for block in section.blocks -%}
          {%- assign article = block.settings.article -%}
          <li {{ block.shopify_attributes }}>
            {%- if article != blank -%}
              {% render 'article-card', article: article %}
            {%- else -%}
              <div class="flex h-full flex-col gap-4 rounded-xl bg-black/5 p-4">
                <div class="aspect-video w-full rounded-xl bg-black/10"></div>
                <div class="flex flex-1 flex-col gap-2">
                  <h3 class="text-h3 font-extrabold">Select a blog post</h3>
                  <p class="text-sm text-black/60">Choose an article for this slot in the section settings.</p>
                </div>
              </div>
            {%- endif -%}
          </li>
        {%- endfor -%}
      {%- else -%}
        {%- for i in (1..3) -%}
          <li>
            <div class="flex h-full flex-col gap-4 rounded-xl bg-black/5 p-4">
              <div class="aspect-video w-full rounded-xl bg-black/10"></div>
              <div class="flex flex-1 flex-col gap-2">
                <h3 class="text-h3 font-extrabold">Select a blog post</h3>
                <p class="text-sm text-black/60">Choose an article for this slot in the section settings.</p>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Education articles",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "text",
      "id": "kicker",
      "label": "Kicker",
      "default": "Stride Education"
    },
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "XXXX Education"
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "Choose up to three blog posts to display on this product page."
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "blocks": [
    {
      "type": "article",
      "name": "Slot",
      "settings": [
        {
          "type": "article",
          "id": "article",
          "label": "Article"
        }
      ]
    }
  ],
  "max_blocks": 6,
  "presets": [
    {
      "name": "Education articles",
      "blocks": [
        { "type": "article" },
        { "type": "article" },
        { "type": "article" }
      ]
    }
  ]
}
{% endschema %}

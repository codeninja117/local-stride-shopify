{%- style -%}
  #shopify-section-{{ section.id }} {
    padding-top: {{ section.settings.padding_top }}px;
    padding-bottom: {{ section.settings.padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  #shopify-section-{{ section.id }} .education-articles__grid {
    display: grid;
    gap: 24px;
  }

  @media screen and (min-width: 750px) {
    #shopify-section-{{ section.id }} .education-articles__grid {
      grid-template-columns: repeat(3, minmax(0, 1fr));
    }
  }
{%- endstyle -%}

<section class="education-articles">
  <div class="page-width max-w-screen-2xl">
    <div class="education-articles__header mb-8 flex flex-col">
      {%- assign education_title = section.settings.title -%}
      {%- unless education_title contains '<strong>' or education_title contains '<em>' -%}
        {%- assign education_title = education_title | replace: 'Education', '<strong>Education</strong>' -%}
      {%- endunless -%}
      <h2 class="text-h1 section-title capitalize">
        {{
          education_title
          | replace: '<em>', '<span class="">'
          | replace: '</em>', '</span>'
          | replace: '|', '</span><br><span>'
        }}
      </h2>
    </div>

    <ul class="education-articles__grid">
      {%- if product != blank -%}
        {%- assign slot_1 = product.metafields.custom.education_article_1.value -%}
        {%- assign slot_2 = product.metafields.custom.education_article_2.value -%}
        {%- assign slot_3 = product.metafields.custom.education_article_3.value -%}
      {%- endif -%}

      {%- if slot_1 or slot_2 or slot_3 -%}
        {%- if slot_1 -%}
          <li>
            {% render 'article-card', article: slot_1 %}
          </li>
        {%- endif -%}
        {%- if slot_2 -%}
          <li>
            {% render 'article-card', article: slot_2 %}
          </li>
        {%- endif -%}
        {%- if slot_3 -%}
          <li>
            {% render 'article-card', article: slot_3 %}
          </li>
        {%- endif -%}
      {%- else -%}
        {%- for i in (1..3) -%}
          <li>
            <div class="flex h-full flex-col gap-4 rounded-xl bg-black/5 p-4">
              <div class="aspect-video w-full rounded-xl bg-black/10"></div>
              <div class="flex flex-1 flex-col gap-2">
                <h3 class="text-h3 font-extrabold">Select a blog post</h3>
                <p class="text-sm text-black/60">Set product metafields for education articles.</p>
              </div>
            </div>
          </li>
        {%- endfor -%}
      {%- endif -%}
    </ul>
  </div>
</section>

{% schema %}
{
  "name": "Education articles",
  "tag": "section",
  "class": "section",
  "settings": [
    {
      "type": "inline_richtext",
      "id": "title",
      "label": "Title",
      "default": "XXXX <strong>Education</strong>"
    },
    {
      "type": "color",
      "id": "background_color",
      "label": "Background color",
      "default": "#ffffff"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding top",
      "default": 60
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 120,
      "step": 4,
      "unit": "px",
      "label": "Padding bottom",
      "default": 60
    }
  ],
  "presets": [
    {
      "name": "Education articles"
    }
  ]
}
{% endschema %}

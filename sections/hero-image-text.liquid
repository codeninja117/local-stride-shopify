      "label": "Title font size",
      "options": [
        {
          "value": "text-display-xl",
          "label": "display xl"
        },
        {
          "value": "text-display-l",
          "label": "display large"
        },
        {
          "value": "text-display-m",
          "label": "display m"
        },
        {
          "value": "text-h1",
          "label": "h1"
        },
        {
          "value": "text-h2",
          "label": "h2"
        },
        {
          "value": "text-h3",
          "label": "h3"
        },
        {
          "value": "text-h4",
          "label": "h4"
        },
        {
          "value": "text-h5",
          "label": "h5"
        },
        {
          "value": "text-h6",
          "label": "h6"
        }
      ],
      "default": "text-display-l"
    },
    {
      "type": "inline_richtext",
      "id": "subtitle",
      "label": "Subtitle",
      "default": "We believe in transparency â€“ We want you to know exactly who and where your orthotics come from."
    },
    {
      "type": "select",
      "id": "vertical_alignment",
      "label": "Vertical alignment",
      "options": [
        {
          "value": "items-start",
          "label": "Top"
        },
        {
          "value": "items-center",
          "label": "Center"
        },
        {
          "value": "items-end",

    <div class="section__header text-center">
      {% if section.settings.title != blank %}
        <h2 class="text-h1 section-title capitalize">
          {{
            section.settings.title
            | replace: '<em>', '<span class="">'
            | replace: '</em>', '</span>'
            | replace: '|', '</span> <span>'
          }}
        </h2>
      {% endif %}

      {%- if section.settings.subtitle != blank -%}
        <p class="opacity-60">{{ section.settings.subtitle }}</p>
      {%- endif -%}
    </div>

    <div class="flex flex-col overflow-hidden rounded-lg border">
      <!-- Header Row -->
      <div class="flex flex-row border-b">
        <!-- First column is for feature names -->
        <div class="w-1/4 bg-[rgba(var(--color-alternate-background),1)]">
          <!-- Leave empty for first cell -->
        </div>

        <!-- Company columns - Stride first with white bg, then others with bg-[rgba(var(--color-foreground),0.1)] -->
        {% assign stride_block = section.blocks | where: 'type', 'stride' | first %}
        <div class="w-1/4 bg-[rgba(var(--color-accent),1)] text-center font-medium text-black">
          {% if stride_block.settings.logo != blank %}
            <div class="mx-auto flex items-center justify-center p-4">
              {{ stride_block.settings.logo | image_url: width: 80 | image_tag: class: 'max-w-full h-auto' }}
            </div>
          {% endif %}
        </div>

        {% for block in section.blocks %}
          {% if block.type == 'others' %}
            <div class="w-1/4 content-center bg-[rgba(var(--color-alternate-background),1)] py-4 text-center font-medium ">
              {{ block.settings.title }}
            </div>

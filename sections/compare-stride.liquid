      <!-- Price Row -->
      <div class="flex flex-row border-b">
        <div class="w-1/4 px-2 py-4">
          <div class="font-medium">Price</div>
        </div>

        <!-- Stride price first with bg -->
        <div class="stride_main_price w-1/4 bg-[rgba(var(--color-accent),1)] px-2 py-4 text-center">
          {{ stride_block.settings.price }}
        </div>

        <!-- Other company prices -->
        {% for block in section.blocks %}
          {% if block.type == 'others' %}
            <div class="w-1/4 px-2 py-4 text-center ">
              {{ block.settings.price }}
            </div>
          {% endif %}
        {% endfor %}
      </div>

      <!-- Shipping Time Row -->
      <div class="flex flex-row">
        <div class="w-1/4 px-2 py-4">
          <div class="font-medium">{{ header_block.settings.shipping_time }}</div>
        </div>

        <!-- Stride shipping first with bg -->
        <div class="w-1/4 bg-[rgba(var(--color-accent),1)] px-2 py-4 text-center ">
          <div>{{ stride_block.settings.shipping_time }}</div>
        </div>

        <!-- Other company shipping -->
        {% for block in section.blocks %}
          {% if block.type == 'others' %}
            <div class="w-1/4 px-2 py-4 text-center ">
              <div>{{ block.settings.shipping_time }}</div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>

    <div class="section__footer flex flex-col items-center gap-2 text-center">
      {%- if section.settings.button_label != blank -%}
        {% render 'button',
          tag: 'a',
          variant: 'primary',
          text: section.settings.button_label,
          url: section.settings.button_url
        %}
      {%- endif -%}

      {%- if section.settings.disclaimer != blank -%}
        <span class="inline-block text-sm text-[rgba(var(--color-foreground),0.6)]">
          {{- section.settings.disclaimer -}}
        </span>
      {%- endif -%}
    </div>
  </div>
</div>

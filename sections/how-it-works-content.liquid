<div class="how-it-works-content page-width">
  <div class="section__header flex flex-col gap-30 pt-30 pb-10">
    <div class="flex flex-col gap-6 lg:w-1/2">
      <span class="text-muted uppercase">{{ section.settings.eyebrow_text }}</span>
      <h2 class="text-4xl">{{ section.settings.title }}</h2>
    </div>

    <nav class="flex gap-2">
      {%- for block in section.blocks -%}
        {%- liquid
          assign title = block.settings.title | replace: '|', ' ' | replace: '<em>', '' | replace: '</em>' | replace: '<strong>', '' | replace: '</strong>', ''

          assign title_handle = title | handleize
        -%}
        <a
          href="#{{ title_handle }}"
          class="overflow-hidden rounded-4xl bg-white/50 px-6 py-2 transition-colors duration-300 ease-in-out hover:bg-black hover:text-white"
        >
          {{- title -}}
        </a>
      {%- endfor -%}
    </nav>
  </div>

  <div class="grid gap-6" role="list">
    {%- for block in section.blocks -%}
      {%- liquid
        assign title = block.settings.title | replace: '|', ' ' | replace: '<em>', '' | replace: '</em>' | replace: '<strong>', '' | replace: '</strong>', ''

        assign title_handle = title | handleize
      -%}
      {%- case block.type -%}
        {%- when 'phase_1' -%}
          {% render 'phase-1', block: block, index: forloop.index %}
        {%- when 'phase_2' -%}
          {% render 'phase-2', block: block, index: forloop.index %}
        {%- when 'phase_3' -%}
          {% render 'phase-3', block: block, index: forloop.index %}
        {%- when 'phase_4' -%}
          {% render 'phase-4', block: block, index: forloop.index %}
        {%- when 'phase_5' -%}
          {% render 'phase-5', block: block, index: forloop.index %}
        {%- else -%}
      {%- endcase -%}
    {%- endfor -%}
  </div>
</div>


{% style %}
  .section-{{ section.id }} {
    --text-color: rgb({{section.settings.color_scheme.settings.text.red }}, {{section.settings.color_scheme.settings.text.green }}, {{section.settings.color_scheme.settings.text.blue }});
    --title-max-width: {{ section.settings.title_max_width }}px;
    --custom-page-width: {{ section.settings.custom_page_width }}px;
    padding-top: {{ section.settings.padding_top | times: 0.5 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.5 | round: 0 }}px;
    {% if section.settings.background_color != blank %}
      background-color: {{ section.settings.background_color }};
    {% endif %}
  }

  .section-{{ section.id }} .page-width {
    max-width: var(--custom-page-width);
  }

  .section-{{ section.id }} .text-h1 {
    max-width: var(--title-max-width);
    margin-left: auto;
    margin-right: auto;
  }

  .section-{{ section.id }} .image-caption {
    color: #525A63;
  }

  .section-{{ section.id }} .podiatrist-description {
    color: #525A63;
  }

  :where(.space-y-6>:not(:last-child)) {
    margin-block-start: calc(calc(var(--spacing) * 6) * var(--tw-space-y-reverse));
    margin-block-end: calc(calc(var(--spacing) * 6) * calc(1 - var(--tw-space-y-reverse)));
  }



  @media screen and (min-width: 750px) {
    .section-{{ section.id }} {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{% endstyle %}

<div class="section-{{ section.id }} gradient color-{{ section.settings.color_scheme }}">
  <div class="page-width">
    <!-- Top Title Section -->
    <div class="mb-12 text-center lg:mb-14">
      {% if section.settings.eyebrow_text != blank %}
        <p class="text-slate/60 mb-3 text-sm font-medium tracking-widest uppercase">
          {{ section.settings.eyebrow_text }}
        </p>
      {% endif %}

      <h1 class="text-h1 text-black">
        {{ section.settings.title }}
      </h1>
    </div>

    <!-- Main Content Grid -->
    <div class="grid items-center gap-8 lg:grid-cols-2 lg:gap-20">
      <!-- Left Image -->
      <div class="order-1 lg:order-1">
        {% if section.settings.hero_image != blank %}
          <div class="bg-gray/5 overflow-hidden rounded-2xl shadow-lg" style="aspect-ratio: 470/360;">
            {{
              section.settings.hero_image
              | image_url: width: 800
              | image_tag: alt: section.settings.title, class: 'w-full h-full object-cover'
            }}
          </div>
          {% if section.settings.image_caption != blank %}
            <p class="text-body-s image-caption mt-3">{{ section.settings.image_caption }}</p>
          {% endif %}
        {% else %}
          <div class="bg-gray/10 flex items-center justify-center rounded-2xl shadow-lg" style="aspect-ratio: 470/360;">
            <p class="text-gray">Add an image</p>
          </div>
        {% endif %}
      </div>

      <!-- Right Content -->
      <div class="order-2 lg:order-2">
        {% if section.settings.description != blank %}
          <p class="text-body-l podiatrist-description mb-8 lg:pr-8">
            {{ section.settings.description }}
          </p>
        {% endif %}

        <!-- Podiatrist Points List -->
        <ul class="podiatrist-points-list space-y-6">
          {%- for block in section.blocks -%}
            <li class="podiatrist-point-item" {{ block.shopify_attributes }}>
              <div class="text-body-m text-black">
                {{ block.settings.title }}
              </div>
            </li>
          {%- endfor -%}
        </ul>

        <!-- Logo Badge -->
        {% if section.settings.badge_image != blank %}
          <div class="mt-12 flex justify-start">
            {{
              section.settings.badge_image
              | image_url: width: 120
              | image_tag: alt: 'Brand badge', class: 'h-12 w-auto opacity-80'
            }}
          </div>
        {% endif %}
      </div>
    </div>
  </div>
</div>


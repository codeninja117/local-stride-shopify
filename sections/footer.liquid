                  {%- endif -%}
                </a>
              {%- endif -%}
            </div>
          {%- endif -%}
          <!-- end social icons -->
        </div>
        {%- if section.settings.footer_trust_logos != blank -%}
          <div class="footer__trust-logos w-70">
            {{
              section.settings.footer_trust_logos
              | image_url: width: 640
              | image_tag: class: 'w-full h-auto object-contain', loading: 'lazy', alt: shop.name
            }}
          </div>
        {%- endif -%}
      </div>
      <nav class="footer__nav flex flex-wrap gap-y-12 lg:flex-1 lg:gap-16">
        {%- for block in section.blocks -%}
          <div class="w-1/2 md:flex-1">
            <h3 class="mb-5 tracking-[0.2em] text-[#A7AFB8] uppercase">{{ block.settings.title }}</h3>
            <ul class="flex flex-col gap-1">
              {%- for link in block.settings.menu.links -%}
                <li>
                  <a href="{{ link.url }}">{{ link.title }}</a>
                </li>
              {%- endfor -%}
            </ul>
          </div>
        {%- endfor -%}
      </nav>
    </div>

    <div data-animate="origin">
      {% render 'svg-stride-text-only' %}
    </div>
  </div>
</footer>

{% schema %}
{
  "name": "Footer",
  "class": "section-footer js-section-color",
  "settings": [
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "default": "Have a question?\nContact us at"
    },
    {
      "type": "text",
      "id": "email_address",
      "label": "Email address",
      "default": "team@stridesoles.com"
    },
    {
      "type": "textarea",
      "id": "text",
      "label": "Text",
      "default": "The best orthotics in the world.\nGet started in only a few minutes."
    },
    {
      "type": "image_picker",
      "id": "footer_trust_logos",
      "label": "Trust logos"
    },
    {
      "type": "checkbox",
      "id": "show_social_icons",
      "label": "Show social icons",
      "info": "To link to social media accounts. Icon and URL set in theme settings.",
      "default": false
    },
    {
      "type": "checkbox",
      "id": "hide_on_cart",
      "label": "Hide footer on cart page",
      "default": false
    }
  ],
  "blocks": [
    {
      "type": "menu",
      "name": "Menu",
      "settings": [
        {
          "type": "link_list",
          "id": "menu",
          "label": "Menu"
        },
        {
          "type": "inline_richtext",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ]
}
{% endschema %}

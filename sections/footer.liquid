{%- style -%}
  #shopify-section-{{ section.id }} {
    --text-color: #FFFFFF;
  }
  {%- if section.settings.hide_on_cart -%}
    {% unless cart == empty %}
      .template-cart #shopify-section-{{ section.id }} {
        display: none;
      }
    {% endunless %}
  {%- endif -%}
  
  .footer__social-icons .social-icon {
    width: 28px;
    height: 28px;
    display: inline-flex;
    justify-content: center;
    align-items: center;
    border: 1px solid white;
    border-radius: 30px;
  }
  
  .footer__social-icons .social-icon svg,
  .footer__social-icons .social-icon img {
    width: 14px;
    height: auto;
  }
{%- endstyle -%}

<footer class="bg-black py-10 text-white md:py-20">
  <div class="page-width flex max-w-full flex-col gap-8 px-4 md:gap-32 md:px-8 lg:px-16">
    <a href="{{ routes.root_url }}" class="footer__logomark block w-18" aria-label="{{ shop.name }}">
      {% render 'svg-logomark' %}
    </a>
    <div class="footer__header">
      <h2 class="display inline-flex flex-col text-[26px] leading-tight md:text-5xl md:leading-tight">
        {% assign title_parts = section.settings.title | newline_to_br | split: '<br />' %}
        {% for part in title_parts %}
          <span>{{ part }}</span>
        {% endfor %}
        <a href="mailto:{{ section.settings.email_address }}" class="text-human underline underline-offset-10">
          {{ section.settings.email_address }}
        </a>
      </h2>
    </div>

    <div class="footer__content flex flex-col flex-wrap gap-8 md:gap-16 lg:flex-row">
      <div class="flex flex-col justify-between gap-8 lg:w-1/3">
        <div>
          {%- if section.settings.text != blank -%}
            <div class="footer__text">{{ section.settings.text | newline_to_br }}</div>
          {%- endif -%}
          <!-- Social icons -->
          {%- if section.settings.show_social_icons -%}
            <div class="footer__social-icons flex gap-2 mt-6">
              {%- if settings.social_instagram_link != blank -%}

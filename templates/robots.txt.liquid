{% for group in robots.default_groups %}
  {{- group.user_agent }}

  {%- for rule in group.rules -%}
    {{ rule }}
  {%- endfor -%}

  {%- if group.user_agent.value == '*' -%}
    {{ 'Disallow: /a/community/api/tools/check-follow.json' }}
    {{ 'Disallow: /a/community/api/tools/do-block.json' }}
    {{ 'Disallow: /a/community/api/tools/do-follow.json' }}
    {{ 'Disallow: /*.atom' }}
  {%- endif -%}

  {%- if group.sitemap != blank -%}
    {{ group.sitemap }}
  {%- endif -%}
{% endfor %}
